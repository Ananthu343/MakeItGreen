            }).then((res) => {
                // console.log(res);
                return window.location.reload()

            })
        }
        function deliveredOrder(orderid) {
            console.log("workeddd");
            fetch("/deliveredorder", {
                method: "POST",
                body: JSON.stringify({ id: orderid }),
                headers: {
                    "Content-Type": "application/json",
                },
            }).then((res) => {
                // console.log(res);
                return window.location.reload()

            })
        }
        function pendingOrder(orderid) {
            console.log("workeddd");
            fetch("/pendingorder", {
                method: "POST",
