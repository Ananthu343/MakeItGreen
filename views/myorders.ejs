    <div class="profile-main-container ">
        <div class="primary-profile">
            <div class="primary-profile-div">
                <div style="display: flex; align-items: center; width: 20vw;  flex-direction: column;">
                    <div class="profile-img-container">
                        <img src="/<%= userdata.image_url[0]%>" alt="">
                    </div>
                    <h4>
                        <%= userdata.name %>
                    </h4>
                </div>
            </div>
        </div>
        <div class="secondary-profile">
            <div class="d-flex flex-column flex-shrink-0 p-3 text-white bg-dark" style="width: 20vw; height: auto;">
                <a href="/" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-white text-decoration-none">
                    <svg class="bi me-2" width="40" height="32">
                        <use xlink:href="#bootstrap"></use>
                    </svg>
                    <span class="fs-4">Contents</span>
                </a>
                <hr>
                <ul class="nav nav-pills flex-column mb-auto">

                    <li class="side-item">
                        <a href="/profile" class="nav-link text-white">
                            <svg class="bi me-2" width="16" height="16">
                                <use xlink:href="#speedometer2"></use>
                            </svg>
                            About me
                        </a>
                    </li>
                    <li class="side-item">
                        <a href="/profile/myorders" class="nav-link text-white">
                            <svg class="bi me-2" width="16" height="16">
                                <use xlink:href="#table"></use>
                            </svg>
                            My orders
                        </a>
                    </li>
                    <li class="side-item">
                        <a href="/profile/address" class="nav-link text-white">
                            <svg class="bi me-2" width="16" height="16">
                                <use xlink:href="#grid"></use>
                            </svg>
                            Delivery address
                        </a>
                    </li>
                    <li class="side-item">
                        <a href="/profile/wallet" class="nav-link text-white">
                            <svg class="bi me-2" width="16" height="16">
                                <use xlink:href="#grid"></use>
                            </svg>
                            My wallet
                        </a>
                    </li>

                </ul>
                <hr>
            </div>
            <div class="detail-container">
                <div class="subdetail-container">


                    <div class="Customer-order-profile">
                        <% if(orderdata[0]){ %>
                        <h3><u>Order history</u></h3>
                        <% orderdata.reverse().forEach((item)=>{ %>
                        <div class="order-container">
                            <div>
                               <p id="orderid"><b>Order number:</b> #<%=item.orderid %></p>
                               <p style="color: green;" id="orderstatus"><b>Status:</b> <%=item.status %></p>
                               <% if(item.status == "Confirmed") {%>
                               <p id="expectedby"><b>Expected by:</b> <%=item.expectedBy %></p>
                               <a  href="" onclick="cancelOrder('<%= item.id %>')">Cancel order</a>
                               <% } %>
                            </div>
                            <% item.itemsname.forEach((name,index)=>{ %>
                                <div style="width: 900px; height: 80px; display: flex; justify-content: space-evenly; margin-top: 5px; align-items: center;">
                                 <img style="width: 40px;" src="<%= item.itemsimage[index] %>" alt="">    
                                 <p><%= name %></p>    
                                 <p >Qty : <%= item.quantity[index] %></p>
                                 <p >Price : <%= item.subtotal[index] %></p>
                                </div>
                            <% }) %>
                            <p style="width: 800px; margin-top: 20px;"> <b>Shipping to : </b><%= item.shippingAddress %></p>
                            <div style="width: 500px; display: flex; justify-content: space-evenly;">
                                <p >Payment mode : <b> <%= item.paymentMode %></b></p>
                                <% if(item.paymentMode == "ONLINE"){ %>
                                  <a href="/downloadInvoice/<%= item.id %>">Download invoice</a>
                               <% } %>
                            </div>
                        </div>
                        <% }) %>
                        <% }else{ %>
                    
                            <h2 style="color: black;">Shop now!!</h2>
                       
                       
                        <% } %>
                    </div>


                </div>
            </div>
        </div>
    </div>


